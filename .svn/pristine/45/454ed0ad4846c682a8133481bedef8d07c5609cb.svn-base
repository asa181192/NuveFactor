@Code
    ViewData("Title") = "ControlRiesgo"
End Code

<div class="head">
    <div class="headForma">
      <div class="headFormaContenido">
        <a href="~/Catalogos/Clientes"><img src="~/Images/menu/menuregresar.png"/></a>
        <span>Cliente - @ViewBag.clienteid</span>
      </div>       
    </div>  
</div>

<div id="tableContainer" class="tableContainer">
    <div class="panel-heading">
        <div class="topmargin" >    
            <div class="row">
                <div class="col-md-3">
                    <label>Riesgo Individual</label>      
                     <input type="text" />    
                     <input type="checkbox" />          
                </div>
                 <div class="col-md-4">
                    <label>Riesgo grupo</label>      
                     <input type="text" />    
                     <button>1</button> 
                     <button>2</button>   
                     <button>3</button>   
                     <button>4</button>          
                </div>
                   <div class="col-md-4">
                     <input type="checkbox" />    
                     <label>Vo.Bo.Registro</label>  
                     <input type="checkbox" />    
                     <label>Vo.Bo.Mesa Ctrl.</label> 
                     <button>1</button>
                </div>
            </div>        
                                  
        </div>
    </div> 
    <div class="panel-body">
            <div class="jumbotron">     
                <div class="table-responsive">        
                   <table id="table"  class ="table cell-border compact hover" style="width:100%" > 
                           <thead>
                              <tr>
                                    <th>
                                       Cliente.Linea
                                    </th>
                                    <th>
                                       InfoLinea
                                    </th>
                                    <th>
                                       Id.T24
                                    </th>                                 
                                    <th>
                                       Nombre
                                    </th> 
                                    <th>
                                       Riesgo
                                    </th> 
                                    <th>
                                       Descripcion
                                    </th> 
                                    <th>
                                       Monto
                                    </th>  
                                    <th>
                                       Utilizado
                                    </th> 
                                    <th>
                                       Disponible
                                    </th> 
                                    <th>
                                       Vence
                                    </th>                                  
                              </tr>
                             </thead>
                    </table>
                 </div>     
            </div>
    </div>
</div>
