    ajax: function (url, tipo, data) {
        $.ajax({
            type: tipo,
            url: url,
            beforeSend: function () {
                $.Loading(true);
            },
            success: function (data) {
                if (data.Result) {
                    mensajemodal(data.Text, data.color, data.titulo);
                    if (tabla !== undefined) {
                        tabla.ajax.reload(null, false); // False- permite quedarte en la misma pagina despues de actualizar
                    }
                } else {
                    mensajemodal(data.Text, data.color, data.titulo);
                }
            },
            error: function () {
