				model.sMenu = "<div class=""BoxFlex"" id=""dvflexCatalogos"" >"
				model.sMenu &= "<div class=""BoxFlexShadow"">"
				model.sMenu &= "<p>Catálogos</p>"
				model.sMenu &= "<img src=""../Images/Catalogo.png"" />"
				model.sMenu &= "</div>"
				model.sMenu &= "</div>"

			End If

