    $("#tableContainer").on('click', 'a.file', function (e) {
        $.Loading(true)
        Cookies.remove('reporte');
        Cookies.set('reporte', 'FALSE');
        var time = setInterval(function () {
            if (Cookies.get('reporte') == 'OK') {
                $.Loading(false)
                clearInterval(time);
                Cookies.remove('reporte');
            }
        }, 1000)
    });

});